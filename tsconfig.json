{
  "compilerOptions": {
    "target": "es2016",                              
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,                   
    "module": "commonjs",                            
    "baseUrl": "./src",                              
    "paths": {
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@database/*": ["src/shared/infra/typeorm/database/*"],
      "@root/*": ["../*"]
    },                                      
    "resolveJsonModule": true,              
    "esModuleInterop": true,                
    "forceConsistentCasingInFileNames": true,
    "strict": false,                        
    "skipLibCheck": true                    ,
    "sourceMap": true
  }
}
